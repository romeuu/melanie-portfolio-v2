---
import { Picture } from 'astro:assets';
import illustration from '../../assets/social-media/social-media-hero.svg';
---

<section class="relative min-h-[100vh] flex items-center justify-center overflow-hidden bg-pink-100">
    <div class="container mx-auto px-4 md:px-8">
        <div class="grid grid-cols-1 md:grid-cols-[75%_25%] gap-6 md:gap-12 lg:gap-16 items-center">
            <div class="w-full">
                <h1 class="md:text-left text-left leading-[0.95]">
                    <span class="block font-['Libre_Baskerville'] text-primary italic 
                        text-6xl md:text-7xl lg:text-8xl xl:text-[10rem] 
                        tracking-[-0.07em]">
                        social media
                    </span>
                    <span class="block font-['Poppins'] text-primary font-bold
                        text-5xl md:text-6xl lg:text-7xl xl:text-9xl 
                        tracking-[-0.07em]">
                        that sparks
                    </span>
                    <span class="relative inline-block font-['Libre_Baskerville'] text-primary italic
                        text-5xl md:text-6xl lg:text-7xl xl:text-9xl tracking-[-0.07em] z-10">
                        <span class="absolute top-1/3 left-[10%] right-[10%] h-[50%] 
                            bg-pink-300 rounded-full blur-md z-[-1]"></span>
                        engagement.
                    </span>
                </h1>
            </div>
            <div class="w-full relative flex justify-center md:justify-end md:items-center overflow-visible">
                <Picture 
                    src={illustration} 
                    alt="Social Media Heart Hero" 
                    class="object-contain mt-10 w-[240px] md:w-[360px] lg:w-[480px] xl:w-[560px] translate-y-2 md:translate-y-4" 
                    loading="eager"
                    fetchpriority="high"
                    decoding="sync"
                    formats={['avif','webp', 'png']}
                />
            </div>
        </div>
    </div>
</section>
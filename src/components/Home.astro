---
import background from '../assets/bg-home.svg';
---

<section 
    class="relative h-[90vh] bg-cover bg-center bg-no-repeat flex items-center justify-center" 
    style={`background-image: url(${background.src})`}
>
    <div class="container mx-auto px-4 md:px-8 flex justify-center">
        <div class="max-w-4xl w-full">
            <h1 class="flex flex-col md:text-left text-center">
                <span class="font-['Libre_Baskerville'] text-primary italic font-semibold text-6xl md:text-8xl lg:text-[10rem] tracking-[-0.07em] leading-none">
                    bienvenido
                </span>
                <span class="font-['Poppins'] text-primary font-bold text-5xl md:text-7xl lg:text-9xl tracking-[-0.07em] leading-tight">
                    a mi portfolio.
                </span>
            </h1>
        </div>
    </div>
</section>